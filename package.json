{
  "name": "livepush",
  "version": "0.13.2",
  "description": "Update your containers live!",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rm -rf build",
    "prepare": "npm run build",
    "prepublish": "require-npm4-to-publish",
    "precommit": "lint-staged",
    "prettify": "prettier --config ./node_modules/resin-lint/config/.prettierrc --write \"{lib,test}/**/*.ts\"",
    "lint": "resin-lint --typescript lib/ test/ && tsc --noEmit",
    "build": "npm run clean && npm run prettify && tsc --project tsconfig.publish.json",
    "build:test": "npm run clean && tsc --project . && cp -r test/contexts build/test/",
    "test": "npm run prettify && npm run lint && npm run test:cov",
    "test:cov": "npm run build:test && nyc mocha",
    "test:fast": "npm run build:test && mocha"
  },
  "author": "Cameron Diver <cameron@balena.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/dockerode": "^2.5.5",
    "@types/lodash": "^4.14.116",
    "@types/md5": "^2.1.32",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.5",
    "@types/mz": "0.0.32",
    "@types/shell-escape": "^0.2.0",
    "@types/shell-quote": "^1.6.0",
    "@types/sinon": "^5.0.2",
    "@types/tar-fs": "^1.16.1",
    "@types/tar-stream": "^1.6.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "require-npm4-to-publish": "^1.0.0",
    "resin-lint": "^2.0.1",
    "sinon": "^6.1.5",
    "tar-fs": "^2.0.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "docker-file-parser": "^1.0.3",
    "dockerode": "^2.5.6",
    "husky": "^1.1.3",
    "lodash": "^4.17.10",
    "minimatch": "^3.0.4",
    "mz": "^2.7.0",
    "node-watch": "^0.5.9",
    "shell-escape": "^0.2.0",
    "shell-quote": "^1.6.1",
    "strict-event-emitter-types": "^2.0.0",
    "typed-error": "^3.0.1"
  }
}
